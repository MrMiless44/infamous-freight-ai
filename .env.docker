# Docker Compose Local Testing Environment
# Copy to .env and update with your Stripe test keys

# Database Configuration (Docker PostgreSQL)
DATABASE_URL="postgresql://infamous:infamouspass@postgres:5432/infamous_freight"

# Server Configuration
PORT=4000
NODE_ENV=development

# JWT Configuration
JWT_SECRET="local-dev-jwt-secret-change-in-production"

# AI Synthetic Engine (Mocked for development)
AI_SYNTHETIC_ENGINE_URL="http://localhost:8000"
AI_SYNTHETIC_API_KEY="local-dev-ai-key"
AI_SECURITY_MODE="development"

# Stripe Configuration - USE TEST KEYS LOCALLY
# Get from https://dashboard.stripe.com/test/apikeys
STRIPE_SECRET_KEY="sk_test_YOUR_TEST_SECRET_KEY_HERE"
STRIPE_PUBLISHABLE_KEY="pk_test_YOUR_TEST_PUBLISHABLE_KEY_HERE"
STRIPE_WEBHOOK_SECRET="whsec_YOUR_LOCAL_WEBHOOK_SECRET_HERE"

# PayPal Configuration (Optional - use test credentials)
PAYPAL_CLIENT_ID="your-paypal-test-client-id"
PAYPAL_CLIENT_SECRET="your-paypal-test-client-secret"

# Audit Logging
AUDIT_LOG_ENABLED="true"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL="debug"

# Frontend Configuration
NEXT_PUBLIC_API_BASE="http://localhost:4000"
NEXT_PUBLIC_APP_NAME="Infamous Freight (Local)"
